{% extends 'master.twig'%}
{% block title %}{{ user.display_name|e }} - Engineer Man{% endblock %}
{% block content %}
    <div style="padding: 30px 10px 0px 10px; text-align: center; display: flex; justify-content: center; ">
        <div class="col-12 col-md-3" style="padding: 0px 50px; float: left;">
            <img src="{{ sails.glob.constant.gcloud_base_url }}{{ user.avatar_url }}" style="width: 128px; height: auto;" />
            <h4 class="f700">{{ user.display_name }}</h4>
            <h4 class="f900"><i class="fa fa-bolt"></i> {{ user.score }}</h4>
        </div>
        <div class="col-12 col-md-9" style="padding: 0px 20px; display: flex; flex-direction: column; align-items: flex-start">
            <h4 style="font-weight: bold; padding-left:15px">Activity Feed</h4>    
            
            <div class="em_user_questions col-12 col-md-12">
                <div id="user_questions"></div>
                <script>
                    ReactDOM.render(React.createElement(UserQuestions, {
                        questions: {{ questions|json_encode|noscript }}
                    }), document.getElementById('user_questions'));
                </script>
            </div>

            <div class="em_user_comments col-12 col-md-12">
                <div id="user_comments"></div>
                <script>
                    ReactDOM.render(React.createElement(UserComments, {
                        comments: {{ comments|json_encode|noscript }}
                    }), document.getElementById('user_comments'));
                </script>
            </div>

        </div>
    </div>
{% endblock %}
