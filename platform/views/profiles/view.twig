{% extends 'master.twig'%}
{% block title %}{{ user.display_name|e }} - Engineer Man{% endblock %}
{% block content %}
    <div style="padding: 30px 20px 15px 15px; text-align: center;">
        <div style="padding: 0px 50px; float: left; border-right: solid white 2px">
            <img src="{{ sails.glob.constant.gcloud_base_url }}{{ user.avatar_url }}" style="width: 128px; height: auto;" />
            <h4 class="f700">{{ user.display_name }}</h4>
            <h4 class="f900"><i class="fa fa-bolt"></i> {{ user.score }}</h4>
        </div>
        <div style="padding: 0px 20px; display: flex; flex-direction: column; align-items: flex-start">
            <h4>Activity Feed</h4>    
    
            <div id="user_questions"></div>
            <script>
                ReactDOM.render(React.createElement(UserQuestions, {
                    questions: {{ user.questions|json_encode|noscript }},
                    username: {{ user.display_name|json_encode|noscript }},
                }), document.getElementById('user_questions'));
            </script>

        </div>
    </div>
{% endblock %}
